{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "start",
			"isBackground": true,
		},
		{
			"type": "npm",
			"script": "check",
			"problemMatcher": [ "$tsc" ]
		},
		{
			"type": "npm",
			"script": "check-watch",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [ "$tsc-watch" ]
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": [ "$eslint-compact" ]
		},
		{
			"type": "npm",
			"script": "build",
			"group": "build",
			"problemMatcher": [ "$tsc" ]
		},
		{
			"type": "npm",
			"script": "preview",
			"isBackground": true,
		},
		{
			"type": "npm",
			"script": "pre-commit",
			"problemMatcher": [],
		}
	]
}
